#include <semaphore.h>
#include <fcntl.h>

    sem_t mutex;  // Semaphore
    
    // Initialize the semaphore
    if (sem_init(mutex, 1, 1) != 0) 
    {
        perror("sem_init");
        exit(EXIT_FAILURE);
    }

        sem_wait(mutex); // Acquire semaphore
        sem_post(mutex); // Release semaphore
